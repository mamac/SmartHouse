
{% extends "LljmHomeBundle::layout.html.twig" %}

{% block title %}
  Delete Electricity log - {{ parent() }}
{% endblock %}

{% block lljm_home_body %}

  <h2>{{ 'Delete a record in the electricity log' | trans }}</h2>

  <p>
    {{ 'Confirm you want to delete the record below' | trans }}:
    <br>
    - {{ eleclog.id }}<br>
    - {{ eleclog.daterx | date("Y-m-d H:i:s") }}<br>
    - {{ eleclog.metervalue }}<br>
    - {{ eleclog.meterid.metername }}<br>
  </p>

  <form action="{{ path('home_eleclogdel', {'id': eleclog.id}) }}" method="post">
    <a href="{{ path('home_elecvisual')}}" class="btn btn-default glyphicon glyphicon-chevron-left">
      Back
    </a>
    <input type="submit" value="Delete" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}